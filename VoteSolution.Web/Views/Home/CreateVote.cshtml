@model VoteViewModel

@{
    ViewData["Name"] = "Crear Votación";
}

<h3>Crear Votacion</h3>

<form action="/Home/CreateVote" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type="text" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", type="text" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Registrar Votacion</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
